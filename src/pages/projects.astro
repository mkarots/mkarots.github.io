---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';
import { projects } from '../projects.config';

// Get all blog posts to count posts per project
const allPosts = await getCollection('blog');
const postsByProject = new Map<string, number>();

allPosts.forEach(post => {
	if (post.data.project) {
		const count = postsByProject.get(post.data.project) || 0;
		postsByProject.set(post.data.project, count + 1);
	}
});
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Projects - ${SITE_TITLE}`} description="My open source projects and contributions" />
	</head>
	<body class="flex flex-col min-h-screen" style="background-color: var(--bg-primary);">
		<Header />
		<main class="flex-1">
			<section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
				<h1 class="text-3xl font-bold mb-2" style="color: var(--text-primary);">
					Projects
				</h1>
				<p class="text-base italic mb-12" style="color: var(--text-primary);">
					Open source projects and tools I've built.
				</p>
				
				<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
					{projects.map(project => {
						const postCount = postsByProject.get(project.slug) || 0;
						return (
							<article 
								class="p-6 rounded-lg border transition-all hover:shadow-lg"
								style="border-color: var(--border-color); background-color: var(--bg-primary);"
							>
								<div class="flex items-start justify-between gap-3 mb-3">
									<h2 class="text-lg font-semibold font-mono project-title flex-1">
										<a href={`/projects/${project.slug}`} class="hover:opacity-80 transition-opacity">
											{project.name}
										</a>
									</h2>
									<span class="text-xs font-mono whitespace-nowrap" style="color: var(--text-secondary);">
										{project.language}
									</span>
								</div>
								<p style="color: var(--text-secondary);" class="text-sm mb-4 line-clamp-3">
									{project.description}
								</p>
								<div class="flex items-center justify-between gap-3 text-sm">
									{postCount > 0 && (
										<span class="text-xs font-mono" style="color: var(--text-secondary);">
											{postCount} {postCount === 1 ? 'post' : 'posts'}
										</span>
									)}
									<div class="flex gap-3 ml-auto">
										<a 
											href={`/projects/${project.slug}`}
											class="hover-link text-xs"
										>
											View →
										</a>
										<a 
											href={project.url}
											target="_blank"
											rel="noopener noreferrer"
											class="hover-link text-xs"
										>
											GitHub →
										</a>
									</div>
								</div>
							</article>
						);
					})}
				</div>

				<div class="mt-12 pt-8" style="border-top: 1px solid var(--border-color);">
					<p style="color: var(--text-secondary);">
						Find more of my work on{' '}
						<a 
							href="https://github.com/mkarots"
							target="_blank"
							rel="noopener noreferrer"
							class="hover-link"
						>
							GitHub
						</a>
					</p>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.project-title {
		color: var(--accent);
		transition: all 0.3s ease;
	}
	.project-title:hover {
		color: var(--accent-hover);
		text-decoration: underline;
		text-decoration-color: var(--accent);
	}
	.hover-link {
		color: var(--accent);
		transition: color 0.2s;
	}
	.hover-link:hover {
		color: var(--accent-hover);
	}
</style>