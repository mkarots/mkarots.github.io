---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog'))
	.filter(post => !post.data.draft)
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Writing - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body class="flex flex-col min-h-screen bg-white dark:bg-gray-900">
		<Header />
		<main class="flex-1">
			<section class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
				<h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-12">
					Writing
				</h1>
				<div class="space-y-8">
					{posts.map(post => (
						<article class="border-b border-gray-200 dark:border-gray-800 pb-8 last:border-0">
							<a href={`/blog/${post.slug}/`} class="group block">
								<div class="flex items-baseline gap-4 mb-2">
									<time class="text-sm text-gray-500 dark:text-gray-500 font-mono">
										<FormattedDate date={post.data.pubDate} />
									</time>
								</div>
								<h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100 group-hover:text-gray-600 dark:group-hover:text-gray-400 transition-colors mb-2">
									{post.data.title}
								</h2>
								<p class="text-gray-600 dark:text-gray-400">
									{post.data.description}
								</p>
							</a>
						</article>
					))}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
