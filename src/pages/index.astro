---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

// Get recent blog posts
const posts = (await getCollection('blog'))
	.filter(post => !post.data.draft)
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 6);

// Featured projects - customize these with your own
const projects = [
	{
		name: 'project-name',
		description: 'A brief description of what this project does and the problem it solves.',
		url: 'https://github.com/yourusername/project-name',
		language: 'TypeScript',
	},
	{
		name: 'another-project',
		description: 'Another project description highlighting key features or achievements.',
		url: 'https://github.com/yourusername/another-project',
		language: 'Python',
	},
	{
		name: 'third-project',
		description: 'Description of your third featured project and its impact.',
		url: 'https://github.com/yourusername/third-project',
		language: 'Go',
	},
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="flex flex-col min-h-screen bg-white dark:bg-gray-900">
		<Header />
		<main class="flex-1">
			<!-- Simple Hero Section -->
			<section class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
				<div class="space-y-4">
					<h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-gray-100">
						Your Name
					</h1>
					<p class="text-xl text-gray-600 dark:text-gray-400">
						Software Engineer
					</p>
					<p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed max-w-2xl">
						I write about software development, engineering practices, and technical problem-solving.
						This is a space for sharing knowledge and documenting what I learn.
					</p>
				</div>
			</section>

			<!-- Projects Section -->
			<section class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8 border-t border-gray-200 dark:border-gray-800">
				<h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-8">
					Projects
				</h2>
				<div class="space-y-6">
					{projects.map(project => (
						<article class="border-b border-gray-200 dark:border-gray-800 pb-6 last:border-0">
							<a 
								href={project.url}
								target="_blank"
								rel="noopener noreferrer"
								class="group block"
							>
								<div class="flex items-baseline justify-between gap-4 mb-2">
									<h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 group-hover:text-gray-600 dark:group-hover:text-gray-400 transition-colors font-mono">
										{project.name}
									</h3>
									<span class="text-sm text-gray-500 dark:text-gray-500 font-mono">
										{project.language}
									</span>
								</div>
								<p class="text-gray-600 dark:text-gray-400">
									{project.description}
								</p>
							</a>
						</article>
					))}
				</div>
				<div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-800">
					<a 
						href="https://github.com/yourusername"
						target="_blank"
						rel="noopener noreferrer"
						class="text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100 underline decoration-gray-400"
					>
						View all projects on GitHub →
					</a>
				</div>
			</section>

			<!-- Blog Posts Section -->
			<section class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8 border-t border-gray-200 dark:border-gray-800">
				<h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-8">
					Writing
				</h2>
				<div class="space-y-8">
					{posts.map(post => (
						<article class="border-b border-gray-200 dark:border-gray-800 pb-8 last:border-0">
							<a href={`/blog/${post.slug}/`} class="group block">
								<div class="flex items-baseline gap-4 mb-2">
									<time class="text-sm text-gray-500 dark:text-gray-500 font-mono">
										<FormattedDate date={post.data.pubDate} />
									</time>
								</div>
								<h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 group-hover:text-gray-600 dark:group-hover:text-gray-400 transition-colors mb-2">
									{post.data.title}
								</h3>
								<p class="text-gray-600 dark:text-gray-400">
									{post.data.description}
								</p>
							</a>
						</article>
					))}
				</div>
				<div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-800">
					<a 
						href="/blog"
						class="text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100 underline decoration-gray-400"
					>
						View all posts →
					</a>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
