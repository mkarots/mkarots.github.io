---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

// Get recent blog posts
const posts = (await getCollection('blog'))
	.filter(post => !post.data.draft)
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 6);

// Featured projects - customize these with your own
const projects = [
	{
		name: 'project-name',
		description: 'A brief description of what this project does and the problem it solves.',
		url: 'https://github.com/mkarots/project-name',
		language: 'TypeScript',
	},
	{
		name: 'another-project',
		description: 'Another project description highlighting key features or achievements.',
		url: 'https://github.com/mkarots/another-project',
		language: 'Python',
	},
	{
		name: 'third-project',
		description: 'Description of your third featured project and its impact.',
		url: 'https://github.com/mkarots/third-project',
		language: 'Go',
	},
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="flex flex-col min-h-screen" style="background-color: var(--bg-primary);">
		<Header />
		<main class="flex-1">
			<!-- Hero Section -->
			<section class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
				<div class="space-y-6">
					<p class="text-lg leading-relaxed" style="color: var(--text-primary);">
						Hey ðŸ‘‹, I'm a software engineer with an ECE background, passionate about developer tooling and product engineering! 
						I write about interesting engineering and mathematics problems, personal projects, and OSS.
					</p>
					
					<div>
						<p class="text-sm mb-3" style="color: var(--text-secondary);">
							Social Links:
						</p>
						<div class="flex gap-4">
							<a
								href="https://github.com/mkarots"
								target="_blank"
								rel="noopener noreferrer"
								class="social-link"
								aria-label="GitHub"
							>
								<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 16 16">
									<path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path>
								</svg>
							</a>
							<a
								href="https://x.com/cepstrum9"
								target="_blank"
								rel="noopener noreferrer"
								class="social-link"
								aria-label="Twitter"
							>
								<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 16 16">
									<path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"></path>
								</svg>
							</a>
							<a
								href="https://www.linkedin.com/in/michaelkarotsieris"
								target="_blank"
								rel="noopener noreferrer"
								class="social-link"
								aria-label="LinkedIn"
							>
								<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 16 16">
									<path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"></path>
								</svg>
							</a>
						</div>
					</div>
				</div>
			</section>

			<!-- Projects Section -->
			<section class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8" style="border-top: 1px solid var(--border-color);">
				<h2 class="text-2xl font-bold mb-8" style="color: var(--text-primary);">
					Projects
				</h2>
				<div class="space-y-6">
					{projects.map(project => (
						<article class="pb-6 last:border-0" style="border-bottom: 1px solid var(--border-color);">
							<a 
								href={project.url}
								target="_blank"
								rel="noopener noreferrer"
								class="group block"
							>
								<div class="flex items-baseline justify-between gap-4 mb-2">
									<h3 class="text-lg font-semibold font-mono project-title">
										{project.name}
									</h3>
									<span class="text-sm font-mono" style="color: var(--text-secondary);">
										{project.language}
									</span>
								</div>
								<p style="color: var(--text-secondary);">
									{project.description}
								</p>
							</a>
						</article>
					))}
				</div>
				<div class="mt-8 pt-8" style="border-top: 1px solid var(--border-color);">
					<a 
						href="https://github.com/mkarots"
						target="_blank"
						rel="noopener noreferrer"
						class="hover-link"
					>
						View all projects on GitHub â†’
					</a>
				</div>
			</section>

			<!-- Blog Posts Section -->
			<section class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8" style="border-top: 1px solid var(--border-color);">
				<h2 class="text-2xl font-bold mb-8" style="color: var(--text-primary);">
					Recent Posts
				</h2>
				<div class="space-y-8">
					{posts.map(post => (
						<article class="pb-8 last:border-0" style="border-bottom: 1px solid var(--border-color);">
							<a href={`/blog/${post.slug}/`} class="group block">
								<h3 class="text-xl font-semibold mb-2 post-title">
									{post.data.title}
								</h3>
								<div class="mb-2 text-sm" style="color: var(--text-primary);">
									<FormattedDate date={post.data.pubDate} />
								</div>
								<p style="color: var(--text-primary);">
									{post.data.description}
								</p>
							</a>
						</article>
					))}
				</div>
				<div class="mt-8 pt-8" style="border-top: 1px solid var(--border-color);">
					<a 
						href="/blog"
						class="hover-link"
					>
						View all posts â†’
					</a>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.project-title {
		color: var(--accent);
		transition: all 0.3s ease;
	}
	.project-title:hover {
		color: var(--accent-hover);
		transform: translateX(4px);
	}
	.post-title {
		color: var(--accent);
		transition: all 0.3s ease;
	}
	.post-title:hover {
		color: var(--accent-hover);
		text-decoration: underline;
		text-decoration-color: var(--accent);
	}
	.hover-link {
		color: var(--text-secondary);
		transition: color 0.2s;
	}
	.hover-link:hover {
		color: var(--accent);
	}
	.social-link {
		color: var(--text-secondary);
		transition: color 0.3s ease;
	}
	.social-link:hover {
		color: var(--accent);
	}
</style>
