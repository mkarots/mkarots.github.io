---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './ThemeToggle';
---

<header style="background-color: var(--bg-primary); border-bottom: 1px solid var(--border-color);">
	<nav class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="flex justify-between items-center h-16">
			<h2 class="text-base font-semibold" style="color: var(--text-primary);">
				<a href="/" class="hover:opacity-80 transition-opacity">
					{SITE_TITLE}
				</a>
			</h2>
			
			<div class="flex items-center gap-6">
				<div class="hidden sm:flex items-center gap-6">
					<HeaderLink href="/blog">Posts</HeaderLink>
					<HeaderLink href="/projects">Projects</HeaderLink>
				</div>
				<ThemeToggle client:load />
			</div>
		</div>

		<!-- Mobile menu -->
		<div class="sm:hidden pb-3 flex gap-4 text-sm">
			<HeaderLink href="/blog">Posts</HeaderLink>
			<HeaderLink href="/projects">Projects</HeaderLink>
		</div>
	</nav>
</header>
